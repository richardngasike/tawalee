<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Jovamatt Designs and Supplies</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- FontAwesome for icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  
  <style>
    body {
      font-family: 'Roboto', sans-serif;
    }

    /* Carousel and Testimonials Section */
    .carousel-item img {
      object-fit: cover;
      width: 100%;
      max-height: 60vh; /* Restricts the height */
      height: auto; /* Scales proportionally */
    }

    .carousel-item img:hover {
      transform: scale(1.1);
      transition: transform 0.3s ease-in-out;
    }

    .testimonial-card {
      background-color: #FF6600;
      color: white;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .testimonial-card p {
      font-size: 1.2rem;
    }
    .testimonial-card img {
      width: 100%;
      height: auto;
      max-height: 200px; /* Adjust height as needed */
      object-fit: contain; /* Ensures image is fully visible */
      border-radius: 10px; /* Optional: Makes images rounded */
    }


    .partner-logo img {
      margin: 10px;
      max-height: 100px;
      transition: transform 0.3s ease;
    }

    .partner-logo img:hover {
      transform: scale(1.1);
    }

    .section-title {
      color: #FF6600;
      font-size: 2rem;
      font-weight: bold;
      margin-top: 2rem;
    }
  </style>
</head>
<body>

<div class="container text-center">
  <!-- Carousel Section for Testimonials -->
  <div class="mt-5">
    <h3 class="section-title">Client Testimonials</h3>
    <div id="testimonialCarousel" class="carousel slide" data-bs-ride="carousel">
      <div class="carousel-inner">
        <!-- Testimonial 1 -->
        <div class="carousel-item active">
          <div class="testimonial-card">
            <p>"Tawalee is one of a kind in tech industry. It transformed my company to digital world."</p>
            <p><strong>- Vedck Wafula, CEO Extravis</strong></p>
            <img src="/assets/images/waf.png" class="d-block w-100" alt="Testimonial 1">
          </div>
        </div>

        <!-- Testimonial 2 -->
        <div class="carousel-item">
          <div class="testimonial-card">
            <p>"The service from this company was exceptional. Their attention to detail and creativity was beyond expectations."</p>
            <p><strong>- Richard Ngasike, Software Engineer Extravis</strong></p>
            <img src="/assets/images/richyict.png" class="d-block w-100" alt="Testimonial 2">
          </div>
        </div>

        <!-- Testimonial 3 -->
        <div class="carousel-item">
          <div class="testimonial-card">
            <p>"Amazing Tech skills and fantastic customer service. Iâ€™m extremely happy with the outcome of my project!"</p>
            <p><strong>- Ian, Head of Procurement Flozmart</strong></p>
            <img src="/assets/images/richyict.png" class="d-block w-100" alt="Testimonial 3">
          </div>
        </div>
      </div>
      <button class="carousel-control-prev" type="button" data-bs-target="#testimonialCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#testimonialCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>
  </div>

  <!-- Partners Section -->
  <div class="mt-5">
    <h3 class="section-title">Our Trusted Partners</h3>
    <div class="d-flex justify-content-center flex-wrap">
      <div class="partner-logo mx-3">
        <img src="/assets/images/tawalee.png" alt="Partner 1">
      </div>
      <div class="partner-logo mx-3">
        <img src="/assets/images/kengen.png" alt="Partner 2">
      </div>
      <div class="partner-logo mx-3">
        <img src="/assets/images/patner3.png" alt="Partner 3">
      </div>
      <div class="partner-logo mx-3">
        <img src="/assets/images/equity.png" alt="Partner 4">
      </div>
    </div>
  </div>

  <!-- Scroll to Top Button -->
  <button id="scrollToTopBtn" class="btn btn-primary rounded-circle" style="display: none; position: fixed; bottom: 20px; right: 20px;">
    <i class="bi bi-arrow-up"></i>
  </button>
</div>

<!-- Scroll to Top Button Script -->
<script>
  const scrollToTopBtn = document.getElementById('scrollToTopBtn');

  window.addEventListener('scroll', () => {
    if (window.scrollY > 300) {
      scrollToTopBtn.style.display = 'flex';
    } else {
      scrollToTopBtn.style.display = 'none';
    }
  });

  scrollToTopBtn.addEventListener('click', () => {
    window.scrollTo({ top: 0, behavior: 'smooth' });
  });
</script>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
